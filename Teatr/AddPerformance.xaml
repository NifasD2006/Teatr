<Page x:Class="Teatr.AddPerformance"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Teatr"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPerformance">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10" Width="300">
            <Border Background="#F8F9FA" CornerRadius="8" Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel Orientation="Vertical">

                    <!-- Заголовок -->
                    <TextBlock FontSize="22" FontWeight="SemiBold" Text="Добавление выступления" 
                       Foreground="#2E3440" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <!-- Дата выступления -->
                    <StackPanel Orientation="Horizontal" Margin="0,8" VerticalAlignment="Center">
                        <TextBlock Text="Дата:" FontSize="16" Width="100" VerticalAlignment="Center" 
                           Foreground="#4A5568" FontWeight="SemiBold"/>
                        <DatePicker Name="PerformanceDatePicker" Width="120" Height="32" FontSize="14" 
                          VerticalContentAlignment="Center" SelectedDate="{Binding RepertoireData}"/>
                    </StackPanel>

                    <!-- Время выступления -->
                    <StackPanel Orientation="Horizontal" Margin="0,8" VerticalAlignment="Center">
                        <TextBlock Text="Время:" FontSize="16" Width="100" VerticalAlignment="Center" 
                           Foreground="#4A5568" FontWeight="SemiBold"/>
                        <TextBox Name="PerformanceTimeTextBox" Width="120" Height="32" FontSize="14" 
                         VerticalContentAlignment="Center" TextAlignment="Center"
                         Background="White" BorderBrush="#CBD5E0" BorderThickness="1" 
                         Text="{Binding RepertoireTime}" ToolTip="Формат: ЧЧ:мм"/>
                    </StackPanel>

                    <!-- Цена билета -->
                    <StackPanel Orientation="Horizontal" Margin="0,8" VerticalAlignment="Center">
                        <TextBlock Text="Цена билета:" FontSize="16" Width="100" VerticalAlignment="Center" 
                           Foreground="#4A5568" FontWeight="SemiBold"/>
                        <TextBox Name="PerformanceCostTextBox" Width="120" Height="32" FontSize="14" 
                         VerticalContentAlignment="Center" TextAlignment="Center"
                         Background="White" BorderBrush="#CBD5E0" BorderThickness="1" 
                         Text="{Binding RepertoireCost}"/>
                    </StackPanel>

                    <!-- Кнопки -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="Сохранить" Name="SavePerformanceBtn" Click="SavePerformanceBtn_Click"
                        Width="100" Height="35" FontSize="14" FontWeight="SemiBold"
                        Background="#2D3748" Foreground="White" BorderBrush="#2C5282"
                        Margin="5,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4A5568"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#2D3748"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Назад" Name="CancelPerformanceBtn" Click="CancelPerformanceBtn_Click"
                        Width="100" Height="35" FontSize="14" FontWeight="SemiBold"
                        Background="#A0AEC0" Foreground="White" BorderBrush="#718096"
                        Margin="5,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#CBD5E0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
