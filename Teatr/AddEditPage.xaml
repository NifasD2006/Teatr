<Page x:Class="Teatr.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Teatr"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage">

    <Grid Margin="0,0,10,-292">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,267" Width="770" >
            <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="#2E3440">Режим Редактирования</TextBlock>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Название спектакля:" FontSize="16" Width="180" VerticalAlignment="Center"/>
                <TextBox Name="NameTextBox" Width="200" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="{Binding PlayName}"/>
                <TextBlock Text="Длительность в мин." FontSize="16" Width="180" VerticalAlignment="Center" Margin="20 0 0 0"/>
                <TextBox Name="DurationTextBox" Width="174" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="{Binding PlayDuration}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Автор:" FontSize="16" Width="180" VerticalAlignment="Center"/>
                <TextBox Name="AutorTextBox" Width="200" Height="30" FontSize="14" VerticalContentAlignment="Center"  Text="{Binding PlayAuthor }"/>
                <TextBlock Text="Страна" FontSize="16" Width="180" VerticalAlignment="Center" Margin="20 0 0 0"/>
                <TextBox Name="CountryTextBox" Width="174" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="{Binding PlayCountry}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Жанр:" FontSize="16" Width="180" VerticalAlignment="Center"/>
                <ComboBox Name="GenreCombo" Width="200" Height="30" FontSize="14" VerticalContentAlignment="Center">

                    <TextBlock Height="30"  Width="150" FontSize="12" > Комедия</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > Драма</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > Милодрама</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > Мюзикл</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > Трагедия</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > Опера</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > Сатира</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > Феерия</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > Сказка</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > Экшен</TextBlock>
                </ComboBox>

                <TextBlock Text="Пушкинская карта?" FontSize="16" Width="180" VerticalAlignment="Center" Margin="20 0 0 0"/>
                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" Name="PushkinCardBox" ></CheckBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Рейтинг:" FontSize="16" Width="180" VerticalAlignment="Center"/>
                <ComboBox Name="RatingCB" Width="200" Height="30" FontSize="14" VerticalContentAlignment="Center">
                    <TextBlock Height="30"  Width="150" FontSize="12" > 0+</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > 6+</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > 12+</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > 16+</TextBlock>
                    <TextBlock Height="30"  Width="150" FontSize="12" > 18+</TextBlock>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="443">
                <StackPanel Orientation="Vertical" Margin="10" Height="205">
                    <TextBlock Text="Постер спектакля:" FontSize="16" Width="180" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Vertical" Width="288" Height="194">
                        <!-- Превью изображения -->
                        <Image Name="PosterPreview" Height="138" Margin="0,5,0,0" Stretch="Uniform" Width="229"/>
                        <!-- Кнопка для выбора файла -->
                        <Button Content="Выбрать изображение..." Height="30" Margin="0,5,0,0" Name ="SelectBtn" Click="SelectBtn_Click" Width="237"/>
                    </StackPanel>
                </StackPanel>
                <Frame Name="RepertiureFrame" NavigationUIVisibility="Hidden" Width="445" Margin="15 0 15 0"></Frame>
                
            
            </StackPanel>


            <Button Content="Сохранить" Click="SaveBtn_Click" Name="SaveBtn" ></Button>

        </StackPanel>
    </Grid>
</Page>
